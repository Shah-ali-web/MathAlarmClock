<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background ring -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:thickness="8dp">
            <solid android:color="#33FFFFFF"/>
        </shape>
    </item>

    <!-- Progress ring -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="true"
            android:thickness="8dp">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</layer-list>
